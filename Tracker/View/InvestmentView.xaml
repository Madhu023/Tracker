<UserControl x:Class="Tracker.View.InvestmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tracker.View"
             mc:Ignorable="d">
    <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Right">Fund Name :</Label>
            <TextBox Grid.Column="3" Grid.Row="1" Height="30" Width="200" VerticalAlignment="Top" Grid.ColumnSpan="2" VerticalContentAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="1" HorizontalContentAlignment="Right">Date :</Label>
            <DatePicker Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" ></DatePicker>
            <Label Grid.Row="5" Grid.Column="1" HorizontalContentAlignment="Right">Amount :</Label>
            <TextBox Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2"  VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Row="7" Grid.Column="3" Height="35" Width="120" HorizontalAlignment="Right" Grid.ColumnSpan="2">Add Entry</Button>
        </Grid>
    </DockPanel>
</UserControl>
